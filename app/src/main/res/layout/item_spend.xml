<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tên Việc"
        android:textColor="@color/colorTextBlack"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tvSpend"
        app:layout_constraintTop_toTopOf="@+id/tvSpend" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ngày Tháng"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvSpend"
        app:layout_constraintTop_toBottomOf="@+id/tvJob" />

<!--    <TextView-->
<!--        android:id="@+id/tvStatus"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:text="Chưa Thanh Toán"-->
<!--        android:textSize="12dp"-->
<!--        app:layout_constraintStart_toEndOf="@+id/line2"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/tvDate" />-->

    <TextView
        android:id="@+id/tvMoneySpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Só Tiền"

        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSpend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSpend" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSpend" />


    <TextView
        android:id="@+id/tvSpend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="1"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_paper"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>